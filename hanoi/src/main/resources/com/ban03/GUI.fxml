<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ban03.UIController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="16.0" prefWidth="600.0">
         <children>
            <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Torres" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="219.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="36.0" prefWidth="155.0" text="Cuantos discos quieres:" HBox.hgrow="ALWAYS" />
            <TextField fx:id="cantidadTexto" alignment="CENTER" prefHeight="0.0" prefWidth="51.0" HBox.hgrow="NEVER" />
         </children>
      </HBox>
      <Pane fx:id="container" minHeight="300.0" minWidth="600.0" prefHeight="300.0" prefWidth="600.0" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" prefHeight="12.0" prefWidth="600.0" spacing="15.0">
         <children>
            <Button minHeight="25.0" minWidth="70.0" mnemonicParsing="false" onAction="#generarDiscos" text="Generar" />
            <Button minHeight="25.0" minWidth="70.0" mnemonicParsing="false" onAction="#order" text="Ordenar" />
            <Button minHeight="25.0" minWidth="70.0" mnemonicParsing="false" onAction="#borrar" text="Borrar" />
            <Button minHeight="25.0" minWidth="70.0" mnemonicParsing="false" onAction="#salir" text="Salir" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
