<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minHeight="480.0" minWidth="720.0" prefHeight="480.0" prefWidth="720.0" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ban03.GUIController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label text="Cuantos:" />
            <TextField fx:id="textCantidad" alignment="CENTER" prefHeight="25.0" prefWidth="72.0" />
         </children>
      </HBox>
      <TextArea fx:id="allAlumnos" prefHeight="90.0" prefWidth="600.0" />
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Linguistica" textAlignment="CENTER" />
                  <TextArea fx:id="linguistica" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Musica" textAlignment="CENTER" />
                  <TextArea fx:id="musica" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Matematicas" textAlignment="CENTER" />
                  <TextArea fx:id="mates" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Espacial" textAlignment="CENTER" />
                  <TextArea fx:id="espacial" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Kinestesica" textAlignment="CENTER" />
                  <TextArea fx:id="kinestesica" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="1.0" prefWidth="680.0">
         <children>
            <Label text="GANADORES" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <TextArea fx:id="ganadores" prefHeight="90.0" prefWidth="600.0" />
      <HBox alignment="CENTER_RIGHT" prefHeight="24.0" prefWidth="600.0" spacing="15.0">
         <children>
            <Button fx:id="generarButton" minHeight="24.0" minWidth="75.0" mnemonicParsing="false" onAction="#generar" prefHeight="24.0" prefWidth="75.0" text="Generar" />
            <Button minHeight="24.0" minWidth="75.0" mnemonicParsing="false" onAction="#etapa" prefHeight="24.0" prefWidth="75.0" text="Etapa" />
            <Button minHeight="24.0" minWidth="75.0" mnemonicParsing="false" onAction="#borrar" prefHeight="24.0" prefWidth="75.0" text="Borrar" />
            <Button fx:id="primaryButton" minHeight="24.0" minWidth="75.0" onAction="#salir" prefHeight="24.0" prefWidth="75.0" text="Salir" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
